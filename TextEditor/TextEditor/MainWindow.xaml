<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MinHeight="350" MinWidth="525">
    <Viewbox>
        <Grid>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="265" Margin="10,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" VerticalScrollBarVisibility="Auto"/>
            <Button x:Name="openButton" Content="Open" HorizontalAlignment="Left" Margin="142,15,0,0" VerticalAlignment="Top" Width="75" Click="openButton_Click"/>
            <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="273,15,0,0" VerticalAlignment="Top" Width="75" Click="saveButton_Click"/>
        </Grid>
    </Viewbox>
</Window>
